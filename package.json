{
  "name": "evig",
  "version": "1.1.0",
  "description": "A persistent document database that emits JSON patches",
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "scripts": {
    "build": "npm-run-all build:clean compile",
    "build:clean": "rm -rf ./dist",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "prepare": "pnpm build",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfrk/evig.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "library"
  ],
  "author": "Fredrik Johansson <jeanfredrik@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfrk/evig/issues"
  },
  "homepage": "https://github.com/jfrk/evig#readme",
  "peerDependencies": {
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "2.1.5",
    "eslint": "^9.15.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "redis": "^4.7.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/ramda": "^0.30.2",
    "immer": "^10.1.1",
    "ramda": "^0.30.1"
  }
}
